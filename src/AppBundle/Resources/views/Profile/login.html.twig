<!DOCTYPE html>
{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sibers Adm</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <form class="form-signin" role="form" action="{{ path('login') }}" method="post">
        <div class="modal-open">
            <div class="modal-dialog" style="width:400px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="form-signin-heading">Авторизация</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            <label for="username" class="sr-only">Логин</label>
                            <input type="text" id="username" class="form-control" placeholder="Логин" required autofocus
                                   name="_username" value="{{ last_username }}">
                        </p>

                        <p>
                            <label for="password" class="sr-only">Пароль</label>
                            <input type="password" id="password" class="form-control" placeholder="Пароль" required
                                   name="_password">
                        </p>
                    </div>
                    <div class="modal-footer">
                        <input name="send" class="btn btn-lg btn-primary btn-block" type="submit" value="Войти">
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
</body>
</html>

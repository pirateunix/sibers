{% extends 'AppBundle:Default:base.html.twig' %}

{% block content %}
    <div class="btn-toolbar" role="toolbar">
        <button type="button" class="btn btn-default _user_add">
            <span class="glyphicon glyphicon-plus" aria-hidden="true">Добавить</span>
        </button>
    </div>
    <br/>
    <div class="panel panel-default">
        <table class="table">
            <tr>
                <td><a href="/admin/1/login">Логин</a></td>
                <td><a href="/admin/1/name">Имя</a></td>
                <td><a href="/admin/1/surname">Фамилия</a></td>

            </tr>

            {% for user in users %}
                <tr>
                    <td><a href="/admin/viewUser/{{ user.id }}">{{ user.login }}</a></td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>

                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-xs _user_edit"
                                    data-key="{{ user.id }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-default btn-xs _user_delete"
                                    data-key="{{ user.id }}">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <div class="modal-footer">
            {% for key, page in pages %}
                {% if page == "..." %}
                    {{ page }}
                {% else %}
                    <a href="{{ page }}">{{ key }}</a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}